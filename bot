pip install pytelegrambotapi
import telebot;
bot = telebot.TeleBot('5991084084:AAEbyENul5UNJbQFcOV92WbhfcFwmxvbXjQ');
@bot.message_handler(content_types=['text', 'document', 'audio'])
if message.text == "Привет":
    bot.send_message(message.from_user.id, "Привет, меня зовут Варвара) Здесь со мной можно обрести ментальное и физическое здоровье. Говорю про тело, чувства и отношения. Приятно познакомиться)")
elif message.text == "/help":
    bot.send_message(message.from_user.id, "Напиши привет")
else:
    bot.send_message(message.from_user.id, "Я тебя не понимаю. Напиши /help.")
    bot.polling(none_stop=True, interval=0)
